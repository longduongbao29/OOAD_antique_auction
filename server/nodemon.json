{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "events": {
        "restart": "sh -c 'npx kill-port 3000'"
    },
    "watch": [
        "server/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,sql"
}